---
import Base from "@blog/layouts/Base.astro";
// import Navbar from "@blog/components/Navbar.astro";
import Navbar from "@blog/ui/navbar/navbar.astro";
import ThemeChange from "@blog/components/ThemeChange.astro";
import Footer from "@blog/components/Footer.astro";

export interface Props {
    title?: string;
    desc?: string;
}

const { title, desc } = Astro.props as Props;
---

<Base title={title} desc={desc}>
    <div
        class="flex flex-col items-center h-screen bg-slate-100 dark:bg-transparent overflow-auto"
    >
        <div class="w-full flex-grow">
            <Navbar>
                <ThemeChange />
            </Navbar>
            <div class="bg">
                <div class="line"></div>
                <figure
                    class="w-full block pb-[550px] bg-cover bg-center bg-no-repeat"
                    style="background-image: url(https://tva2.sinaimg.cn/large/9bd9b167gy1g4lhr9rjs5j21hc0xcx63.jpg);"
                >
                </figure>
                <svg
                    class="waves"
                    viewBox="0 24 150 24"
                    preserveAspectRatio="none"
                >
                    <defs>
                        <path
                            id="wave"
                            d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"
                        ></path>
                    </defs>
                    <g>
                        <use
                            class="wave"
                            xlink:href="#wave"
                            fill="#4579e2"
                            x="50"
                            y="0"></use>
                        <use
                            class="wave"
                            xlink:href="#wave"
                            fill="#3461c1"
                            x="50"
                            y="2"></use>
                        <use
                            class="wave"
                            xlink:href="#wave"
                            fill="#2d55aa"
                            x="50"
                            y="4"></use>
                    </g>
                </svg>
            </div>
            <div class="p-4 pb-10 max-w-3xl mx-auto">
                <slot />
            </div>
        </div>
        <Footer />
    </div>
</Base>
